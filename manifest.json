{
    "name": "AMQ Addons",
    "version": "1.07",
    "description": "Additional Features for AnimeMusicQuiz.com",
    "manifest_version": 2,
    "permissions": [
      "activeTab",
      "https://animemusicquiz.com/*",
      "storage",
      "unlimitedStorage"
    ],    
    "web_accessible_resources": [
    "AMQAddonScript.js",
    "AMQAddonStyle.css",
    "thirdParty/tabulator.js",
    "settings.js",
    "acronym.js",
    "history.js",
    "AMQAddonScript.js",
    "extComms.js",
    "thirdParty/tabulator.css",
    "AMQRestyle.js",
    "AMQRestyle.css"
    ],
    "externally_connectable": {
      "matches": ["https://animemusicquiz.com/*"]
    },
    "content_scripts": [
    {
        "matches": [
        "https://animemusicquiz.com/*"
        ],
        "js": ["thirdParty/jquery-3.1.1.min.js", "domModifier.js"]
    }
    ],
    "browser_action": { 
      "default_title": "AMQ Addons",
      "default_popup": "popup.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
}